IMPORT("../repair/examples/master.mdl", 'Program).

analyze ('Program) {
  Follows($q,$p) :- <: ... :- ..., $p(...), $q(...), ... .:>.
  Follows($q,$p) :- <: ... :- ..., NOT($p(...)), $q(...), ... .:>.
  Follows($q,$p) :- <: ... :- ..., $p(...), NOT($q(...)), ... .:>.
  Follows($q,$p) :- <: ... :- ..., NOT($p(...)), NOT($q(...)), ... .:>.

  BoundVars($p,varName) :-
    <: ... :- ..., $p(...,$x,...), ... .:>,
    ID($x,varName).
  BoundVars(q, varName) :- Follows(q,p), BoundVars(p,varName).

  IllModed(src,$atomID,$ix) :-
    <: ... :- ..., NOT($atomID(...,$ix:$x,...)), ... .:>,
    ID($x, varName),
    NOT(BoundVars($atomID,varName)),
    SRC($atomID,src).
}

OUTPUT('IllModed).
